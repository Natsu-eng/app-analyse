# Configuration de l'environnement Streamlit + ML
# Copiez ce fichier vers .env et ajustez les valeurs selon votre environnement

# Environnement
STREAMLIT_ENV=development
DEBUG_MODE=true
LOG_LEVEL=INFO

# Configuration MLflow
MLFLOW_TRACKING_URI=sqlite:///mlflow.db
MLFLOW_EXPERIMENT_NAME=app-analyse-experiments
MLFLOW_ARTIFACT_ROOT=./mlflow_artifacts

# Configuration des logs
LOG_DIR=./logs
LOG_MAX_SIZE=10485760  # 10MB
LOG_BACKUP_COUNT=5
LOG_CLEANUP_DAYS=30

# Configuration des performances
MAX_MEMORY_USAGE=85  # Pourcentage
MEMORY_CHECK_INTERVAL=180  # Secondes
CACHE_TTL=600  # Secondes

# Configuration des données
MAX_DATASET_SIZE=1000000  # Nombre de lignes
MAX_SAMPLE_SIZE=15000
MAX_BIVARIATE_SAMPLE=10000

# Configuration de la base de données (optionnel)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=ml_analytics
DB_USER=postgres
DB_PASSWORD=your_password_here

# Configuration des modèles
DEFAULT_RANDOM_STATE=42
MAX_TRAINING_TIME=3600  # Secondes
MODEL_SAVE_DIR=./models

# Configuration des rapports
REPORT_OUTPUT_DIR=./reports
PDF_COMPRESSION=true
MAX_REPORT_SIZE=50  # MB

# Configuration de sécurité
SECRET_KEY=your_secret_key_here
ALLOWED_FILE_TYPES=csv,xlsx,parquet
MAX_FILE_SIZE=100  # MB

# Configuration des notifications (optionnel)
EMAIL_SMTP_SERVER=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_app_password


